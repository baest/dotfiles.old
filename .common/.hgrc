[hooks]
changegroup = hg log -r $HG_NODE:tip --stat --template ' {desc}:\n\n'
#changegroup = hg diff --stat -r $HG_NODE -r tip

[ui]
username = Martin Kjeldsen <mk@bluepipe.dk>

[extensions]
color=
hgext.record=
hgext.schemes=
